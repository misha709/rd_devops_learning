Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-24.04"

  # VM1: Public web server with dynamic IP
  config.vm.define "vm1" do |vm1|
    vm1.vm.network "public_network", type: "dhcp"
    vm1.vm.synced_folder "./shared", "/vagrant_shared"
    
    vm1.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
      vb.name = "VM1"
    end

    vm1.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -y nginx
    SHELL
  end

  # VM2: Private server with static IP
  config.vm.define "vm2" do |vm2|
    vm2.vm.network "private_network", ip: "192.168.56.10"
    vm2.vm.synced_folder "./shared", "/vagrant_shared"
    
    vm2.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
      vb.name = "VM2"
    end

    vm2.vm.provision "shell", path: "init_script.sh"
  end

  # VM3: Public server with static IP
  config.vm.define "vm3" do |vm3|
    vm3.vm.network "public_network", ip: "192.168.0.100"
    vm3.vm.synced_folder "./shared_vm3", "/vagrant_shared"
    
    vm3.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
      vb.name = "VM3"
    end

    vm3.vm.provision "shell", path: "init_script.sh"
  end
end
